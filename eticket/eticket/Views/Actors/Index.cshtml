@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}


<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="bg-info rounded-circle"
                                 src="@item.ProfilePictureURL"
                                 alt="@item.FullName"
                                 style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle text-truncate" style="max-width: 150px;">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"
                               asp-action=@nameof(eticket.Controllers.ActorsController.Edit)
                               asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square">
                                    Edit
                                </i>
                            </a> |
                            <a class="btn btn-outline-info"
                               asp-controller=@eticket.Helper.ControllerHelper.GetControllerName(typeof(eticket.Controllers.ActorsController))
                               asp-action=@nameof(eticket.Controllers.ActorsController.Details)
                               asp-route-id="@item.Id">
                                <i class="bi bi-eye">
                                    Details
                                </i>
                            </a> |
                            <a class="btn btn-danger text-white"
                               asp-action=@nameof(eticket.Controllers.ActorsController.Delete)
                               asp-route-id="@item.Id">
                                <i class="bi bi-trash">
                                    Delete
                                </i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem", eticket.Helper.ControllerHelper.GetControllerName(typeof(eticket.Controllers.ActorsController)))
